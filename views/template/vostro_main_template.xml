<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template for Static View -->
    <template id="static_view_template" name="Static View Template">
        <t t-call="web.html_container">
            <div class="o_form_view">
                <div class="o_form_sheet">
                    <h1>Static View</h1>
                    <div class="oe_button_box" name="button_box">
                        <button type="button" class="btn btn-primary">Button 1</button>
                        <button type="button" class="btn btn-secondary">Button 2</button>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Action for Static View -->
    <record id="action_static_view" model="ir.actions.client">
        <field name="name">Static View</field>
        <field name="tag">static_view</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_static_view"
        name="Static View" parent="menu_account"
        action="action_static_view"
    />
</odoo>




